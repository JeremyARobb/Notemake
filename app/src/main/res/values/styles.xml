<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AddedRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="AddedWordTextView" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">27sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="DeleteButtonStyle">
        <item name="android:background">@drawable/baseline_delete_24</item>
        <item name="android:layout_width">@dimen/delete_button_size</item>
        <item name="android:layout_height">@dimen/delete_button_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

</resources>